<div class='container1'>
    <div class='content'>
        <form action="/api/update" method="POST" autocomplete="off">
            <input type="hidden" name="_id" value="{{list._id}}">
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" class="form-control" name="name" value="{{list.name}}"
                    placeholder="Full Name">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="email" value="{{list.email}}" placeholder="Email">
            </div>
            <div class="form-row">
                <div class="form-group md-6">
                    <label>Ph Number</label>
                    <input type="text" name="ph_number" placeholder="Ph Number" value="{{list.ph_number}}"
                        class="form-control">
                </div>
                <div class="form-group md-6">
                    <label>Address</label>
                    <input type="text" name="address" placeholder="address" value="{{list.address}}" class="form-control">
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
                <a href="/employee/list" class="btn btn-danger">
                    <i class="fa fa-list-alt"></i>View All
                </a>
            </div>
        </form>
    </div>
</div>